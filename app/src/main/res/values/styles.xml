<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customToast1">
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="iconRight">@drawable/internet_no_icon</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="nullPointToast">
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="iconRight">@drawable/null_error_24</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="alreadySubbed">
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="iconRight">@drawable/match_won</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="customToast2">
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="iconRight">@drawable/ic_baseline_clear_24</item>
        <item name="iconTint">@android:color/white</item>
        <item name="fontFamily">@font/bree_serif</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>